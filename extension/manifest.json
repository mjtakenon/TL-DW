{
  "name": "TL;DW",
  "description": "a extention for getting words from Youtube videos",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "https://*/*",
    "identity"
  ],
  "background": {
    "scripts": ["background.js", "hot-reload.js"],
    "persistent": false
  },
  // 必要?
  "content_scripts": [
    {
      // "matches": [ "https://www.youtube.com/*" ],
      "matches": [ "https://*/*" ],
      "js": [ "background.js" , "clearTags.js", "showTags.js"]
    }
  ],
  "browser_action": {
    "default_title": "show video's words"
  },
  "manifest_version": 2
}
