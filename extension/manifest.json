{
  "name": "TL;DW",
  "description": "a extention for getting words from Youtube videos",
  "version": "0.1",
  "permissions": [
    "https://www.youtube.com/*",
    "activeTab",
    "identity",
    "management"
  ],
  "background": {
    "scripts": ["background.js", "hot-reload.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "https://*/*" ],
      "js": ["background.js", "clearTags.js", "showTags.js", "saveTags.js"]
    }
  ],
  "browser_action": {
    "default_title": "show video's words"
  },
  "manifest_version": 2
}
